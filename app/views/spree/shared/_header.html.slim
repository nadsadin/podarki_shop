.sticky-top.nav-top
  nav.navbar.navbar-expand.navbar-light.bg-light.navbar-header
    .container.justify-content-between
      = link_to spree.root_path, class: 'navbar-brand'
        = image_tag "logo.png"
      .navbar-form.d-none.d-md-block
        = form_tag spree.products_path, method: :get, class: "navbar-form" do
          .search
            = search_field_tag :keywords, params[:keywords], class: "form-control"
            .search-icon
      div
        ul.navbar-nav
          = render partial: 'spree/shared/select_locale'
          li.nav-item
            = link_to favorite_products_path, class: 'nav-link nav-link-icon'
              i.icon-heart
          li.nav-item
            = link_to spree.account_path, class: 'nav-link nav-link-icon'
              i.icon-account
          li.nav-item
            = link_to spree.cart_path, class: 'nav-link nav-link-icon'
              i.icon-cart
  nav.navbar.navbar-expand-lg.navbar-light.navbar-menu.bg-nav-top
    .container
      button.navbar-toggler.ml-auto aria-controls="navbarSupportedContent" aria-expanded="false" aria-label=("Toggle navigation") data-target="#navbarSupportedContent" data-toggle="collapse" type="button"
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav
          - Spree::Taxonomy.order('position ASC').each do |taxonomy|
            - taxon = taxonomy.root
            li.nav-item
              = link_to(taxon.name, seo_url(taxon), class: 'nav-link')
/#spree-header
  header#header[data-hook]
    .container
      .row
        figure#logo.col-md-4.col-sm-3[data-hook]
          = logo
        = render partial: 'spree/shared/nav_bar'
  .container
    = render partial: 'spree/shared/main_nav_bar'
